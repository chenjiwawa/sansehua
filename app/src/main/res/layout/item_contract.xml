<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingBottom="11dp">

    <TextView
        android:id="@+id/tv_contract_address_appdetail"
        style="@style/text_content_six_lightblack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:text="智能合约：" />

    <TextView
        android:id="@+id/tv_contract_open_appdetail"
        style="@style/text_content_six_lightblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_address_appdetail"
        android:drawableLeft="@mipmap/ic_clean"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="未开源" />

    <TextView
        android:id="@+id/tv_contract_safe_appdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_address_appdetail"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/tv_contract_open_appdetail"
        android:drawableLeft="@mipmap/ic_clean"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="安全性高"
        android:textColor="#7CB305"
        android:textSize="12sp" />

</RelativeLayout>