<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_icon_aboutus"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_icon_aboutus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="@string/app_name"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_qrcode_aboutus"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_below="@id/tv_name_aboutus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/btn_contact_aboutus"
            style="@style/text_content_four_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_qrcode_aboutus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_rect_green"
            android:paddingLeft="70dp"
            android:paddingTop="14dp"
            android:paddingRight="70dp"
            android:paddingBottom="14dp"
            android:text="检查新版本"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_update_aboutus"
            style="@style/text_content_four_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_contact_aboutus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:background="@drawable/shape_rect_green"
            android:paddingLeft="70dp"
            android:paddingTop="14dp"
            android:paddingRight="70dp"
            android:paddingBottom="14dp"
            android:text="检查新版本"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_update_aboutus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_protocal_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textColor="#747CB7"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与"
                android:textColor="@color/color_black_title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_privacy_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textColor="#747CB7"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>