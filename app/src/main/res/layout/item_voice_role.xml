<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_red">

    <RelativeLayout
        android:id="@+id/rl_item_voice_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/iv_img_voice_role"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_img_voice_role"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_title_voice_role"
                style="@style/text_content_one_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_female_user"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="名"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_base_voice_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_id_voice_role"
                    style="@style/text_content_one_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="ID:0" />

                <LinearLayout
                    android:id="@+id/ll_age_horoscope_voice_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_age_voice_role"
                        style="@style/text_content_one_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="0" />


                    <TextView
                        android:id="@+id/tv_horoscope_voice_role"
                        style="@style/text_content_one_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="座" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_data_voice_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rank_voice_role"
                    style="@style/userlabel"
                    android:drawableLeft="@mipmap/ic_rank_user"
                    android:text="等级：0" />

                <TextView
                    android:id="@+id/tv_followers_voice_role"
                    style="@style/userlabel"
                    android:drawableLeft="@mipmap/ic_followers_user"
                    android:text="粉丝：0" />


                <TextView
                    android:id="@+id/tv_followings_voice_role"
                    style="@style/userlabel"
                    android:drawableLeft="@mipmap/ic_followings_user"
                    android:text="关注：0" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_action_voice_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_action_voice_role"
                style="@style/userlabel"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="等级：0" />

            <TextView
                android:id="@+id/tv_action_voice_role"
                style="@style/userlabel"
                android:text="粉丝：0" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>