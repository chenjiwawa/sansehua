<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tricolorflower.heartbeat.common.animation.VPColorAnimation
            android:id="@+id/vpca_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_click_in"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_85"
            android:background="@drawable/shape_rect_transparent_white_stroke"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_31"
            android:paddingRight="@dimen/dp_31"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/click_in"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_number_five"/>

        <j2w.team.common.widget.infiniteviewpager.iconindicator.IconPageIndicator
            android:id="@+id/ipi_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@id/vp_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_50"/>
    </RelativeLayout>

</FrameLayout>