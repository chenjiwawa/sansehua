<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item_video_search"
        android:layout_width="158dp"
        android:layout_height="252dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/iv_img_video_search"
            android:layout_width="158dp"
            android:layout_height="252dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login" />

        <TextView
            android:id="@+id/tv_award_video_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="9dp"
            android:background="@mipmap/ic_reward"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_two" />

        <Button
            android:id="@+id/tv_watch_video_search"
            style="@style/text_content_six_white"
            android:layout_width="52dp"
            android:layout_height="19dp"
            android:layout_above="@+id/iv_logo_video_search"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_rect_ligth_black"
            android:drawableLeft="@mipmap/ic_eye"
            android:drawablePadding="3dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="她"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_logo_video_search"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_above="@+id/tv_des_video_search"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name_video_search"
            style="@style/text_content_six_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_logo_video_search"
            android:layout_alignBottom="@+id/iv_logo_video_search"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/iv_logo_video_search"
            android:gravity="center_vertical|left"
            android:text="她" />

        <TextView
            android:id="@+id/tv_des_video_search"
            style="@style/text_content_six_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="她" />

    </RelativeLayout>
</FrameLayout>