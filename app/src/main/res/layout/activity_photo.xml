<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <com.zl.dappore.common.widget.photoview.PhotoViewPager
        android:id="@+id/pager"
        style="@style/QsLayoutViewpager"
        android:background="@color/transparent"
        android:transitionName="@string/activity_options_compat_photo_view"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="12/100"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shape_rect_transparent_white_stroke"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:text="@string/save"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />
</RelativeLayout>