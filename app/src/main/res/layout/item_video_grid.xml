<?xml version="1.0" encoding="utf-8"?>
<com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="3dp">

    <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentRelativeLayout
        android:id="@+id/rl_item_video1_grid"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:background="@color/color_white"
        app:layout_widthPercent="50%w">

        <ImageView
            android:id="@+id/iv_img_video1_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login" />

        <TextView
            android:id="@+id/tv_award_video1_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="9dp"
            android:background="@mipmap/ic_reward"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_two" />

        <Button
            android:id="@+id/tv_watch_video1_grid"
            style="@style/text_content_six_white"
            android:layout_width="52dp"
            android:layout_height="19dp"
            android:layout_above="@+id/iv_logo_video1_grid"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_rect_ligth_black"
            android:drawableLeft="@mipmap/ic_eye"
            android:drawablePadding="3dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="她"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_logo_video1_grid"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_above="@+id/tv_des_video1_grid"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name_video1_grid"
            style="@style/text_content_six_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_logo_video1_grid"
            android:layout_alignBottom="@+id/iv_logo_video1_grid"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/iv_logo_video1_grid"
            android:gravity="center_vertical|left"
            android:text="她" />

        <TextView
            android:id="@+id/tv_des_video1_grid"
            style="@style/text_content_six_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="她" />

    </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentRelativeLayout>


    <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentRelativeLayout
        android:id="@+id/rl_item_video2_grid"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_marginLeft="3dp"
        android:background="@color/color_white"
        app:layout_widthPercent="50%w">

        <ImageView
            android:id="@+id/iv_img_video2_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login" />

        <TextView
            android:id="@+id/tv_award_video2_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="9dp"
            android:background="@mipmap/ic_reward"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_two" />

        <Button
            android:id="@+id/tv_watch_video2_grid"
            style="@style/text_content_six_white"
            android:layout_width="52dp"
            android:layout_height="19dp"
            android:layout_above="@+id/iv_logo_video2_grid"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_rect_ligth_black"
            android:drawableLeft="@mipmap/ic_eye"
            android:drawablePadding="3dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="她"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_logo_video2_grid"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_above="@+id/tv_des_video2_grid"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name_video2_grid"
            style="@style/text_content_six_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_logo_video2_grid"
            android:layout_alignBottom="@+id/iv_logo_video2_grid"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/iv_logo_video2_grid"
            android:gravity="center_vertical|left"
            android:text="她" />

        <TextView
            android:id="@+id/tv_des_video2_grid"
            style="@style/text_content_six_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="她" />

    </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentRelativeLayout>
</com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>