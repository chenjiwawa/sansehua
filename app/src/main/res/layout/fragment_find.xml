<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_blue_green"
    android:orientation="vertical">

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_shadow_notop" />

    <com.zl.dappore.common.widget.textview.ExpandTxtTextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:trimCollapsedText="show_all_content"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.zl.dappore.common.widget.textview.ExpandIconTextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:textSize="6sp"
        app:eitv_trimLines="1"
        android:layout_height="wrap_content" />

</LinearLayout>