<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="?android:actionBarItemBackground"
                android:duplicateParentState="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_appdetail_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name_voice_room"
            style="@style/text_title_three_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="房间名称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_voice_room"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id_voice_room"
                style="@style/text_title_three_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="ID：" />

            <TextView
                android:id="@+id/tv_users_voice_room"
                style="@style/text_title_three_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="0人在线" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_more_voice_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:src="@mipmap/ic_big_star_select" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_holder_voice_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_decorate_voice_room"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:background="@color/color_red" />

        <ImageView
            android:id="@+id/iv_logo_voice_room"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_animation_voice_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_play_audio_list" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_holder_name_voice_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="房主名称" />

    <TextView
        android:id="@+id/tv_greeting_voice_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="15"
        android:singleLine="true"
        android:text="房间公告" />

</LinearLayout>