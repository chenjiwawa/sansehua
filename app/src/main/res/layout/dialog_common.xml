<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_frame_common"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancel_common"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_rect_white_10radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/sort_type_new"
            android:textColor="#999999"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_gray" />

        <Button
            android:id="@+id/btn_confirm_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="确认"
            android:textColor="#E85756"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@drawable/shape_rect_white_10radius"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="取消"
        android:textColor="#257AE9"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
