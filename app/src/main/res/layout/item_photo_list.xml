<?xml version="1.0" encoding="utf-8"?>
<com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentRelativeLayout
        android:id="@+id/rl_item_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_weight="1"
        app:layout_heightPercent="33.3%w">

        <ImageView
            android:id="@+id/iv_photo_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_like_select"
                android:transitionName="@string/activity_options_compat_photo_cut" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/camera_photo"
                android:textColor="@color/color_gray" />
        </LinearLayout>

    </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentRelativeLayout>

    <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
        android:id="@+id/rl_item_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_heightPercent="33.3%w">

        <ImageView
            android:id="@+id/iv_photo_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="@string/activity_options_compat_photo_cut" />
    </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

    <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
        android:id="@+id/rl_item_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_heightPercent="33.3%w">

        <ImageView
            android:id="@+id/iv_photo_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="@string/activity_options_compat_photo_cut" />
    </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

</com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>