<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:padding="5dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/test123"
            style="@style/voiceclientoperation"
            android:text="上麦\下麦" />

        <Button
            android:id="@+id/role"
            style="@style/voiceclientoperation"
            android:text="上麦\下麦" />

        <Button
            android:id="@+id/music"
            style="@style/voiceclientoperation"
            android:text="打开音乐权限\关闭音乐权限" />

        <Button
            android:id="@+id/enable"
            style="@style/voiceclientoperation"
            android:text="解除封麦\封麦" />

        <Button
            android:id="@+id/letrole"
            style="@style/voiceclientoperation"
            android:text="抱TA上麦\抱TA下麦" />

        <Button
            android:id="@+id/leave"
            style="@style/voiceclientoperation"
            android:text="踢出房间" />

        <Button
            android:id="@+id/mute"
            style="@style/voiceclientoperation"
            android:text="关闭麦克风\打开麦克风" />

        <Button
            android:id="@+id/cancel"
            style="@style/voiceclientoperation"
            android:text="取消" />

    </LinearLayout>
</RelativeLayout>