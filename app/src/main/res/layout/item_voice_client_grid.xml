<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/rl_item_voice_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_decorate_voice_client"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:background="@color/color_red" />

        <ImageView
            android:id="@+id/iv_logo_voice_client"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bg_logo_voice_client"
            android:scaleType="center"
            android:src="@mipmap/ic_add_voice_client" />


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/color_black"
            android:padding="5dp"
            android:visibility="gone">

            <com.opensource.svgaplayer.SVGAImageView
                android:id="@+id/iv_animation_voice_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:antiAlias="true"
                app:autoPlay="true"
                app:clearsAfterStop="true"
                app:loopCount="10"
                app:source="angel.svga" />

        </RelativeLayout>

        <com.opensource.svgaplayer.SVGAImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:antiAlias="true"
            app:source="angel.svga" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_mute_voice_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rl_item_voice_client"
        android:layout_alignBottom="@+id/rl_item_voice_client"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_mute_voice_client"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_name_voice_client"
        style="@style/text_content_four_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_item_voice_client"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="dappæ¦œ" />

</RelativeLayout>