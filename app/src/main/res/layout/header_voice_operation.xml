<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_red"
    android:padding="5dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/ib_local_voice_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:src="@drawable/selector_local_voice_operation" />

        <ImageButton
            android:id="@+id/ib_remote_voice_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_remote_voice_operation" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_add_voice_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/selector_add_voice_operation" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/ib_message_voice_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:src="@drawable/selector_message_voice_operation" />

        <ImageButton
            android:id="@+id/ib_logo_anim_voice_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:src="@drawable/selector_logo_anim_voice_operation" />

        <ImageButton
            android:id="@+id/ib_gift_voice_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_gift_voice_operation" />

    </LinearLayout>
</RelativeLayout>