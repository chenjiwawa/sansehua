<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pos_app_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="@string/fragment_empty"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/font_size_two"/>

    <ImageView
        android:id="@+id/iv_img_app_recommend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/tv_pos_app_recommend"
        android:src="@mipmap/ic_launcher"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/iv_img_app_recommend"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_app_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_empty"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/font_size_two"/>

        <TextView
            android:id="@+id/tv_des_app_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_empty"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/font_size_two"/>

            <RatingBar
                android:id="@+id/rb_score_app_recommend"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:clickable="false"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:progressDrawable="@drawable/ratingbar_normal"
                android:stepSize="0.01"/>
    </LinearLayout>

    <Button
        android:id="@+id/iv_download_app_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="使用"/>

</RelativeLayout>