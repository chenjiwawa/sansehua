<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/actionbar_title_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/color_divider_gray" />

            <RelativeLayout
                android:id="@+id/rl_logo_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="19dp"
                android:paddingTop="8dp"
                android:paddingRight="17dp"
                android:paddingBottom="8dp">

                <TextView
                    style="@style/text_content_four_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="更改头像" />

                <ImageView
                    android:id="@+id/iv_logo_userinfo"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_my_font" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_mine_item_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="19dp"
                android:background="@color/color_divider_gray" />

            <RelativeLayout
                android:id="@+id/rl_nick_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="19dp"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="17dp">

                <TextView
                    style="@style/text_content_four_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="更换昵称" />

                <TextView
                    android:id="@+id/tv_nick_userinfo"
                    style="@style/text_content_four_lightgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:text="nick" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_mine_item_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="19dp"
                android:background="@color/color_divider_gray" />

            <RelativeLayout
                android:id="@+id/rl_psd_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="19dp"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="17dp">

                <TextView
                    style="@style/text_content_four_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="更换密码" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_mine_item_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="19dp"
                android:background="@color/color_divider_gray" />

            <RelativeLayout
                android:id="@+id/rl_language_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="19dp"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="17dp">

                <TextView
                    style="@style/text_content_four_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="切换语言" />

                <TextView
                    android:id="@+id/tv_language_userinfo"
                    style="@style/text_content_four_lightgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:text="中文" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_mine_item_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="19dp"
                android:background="@color/color_divider_gray" />

            <RelativeLayout
                android:id="@+id/rl_bind_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="19dp"
                android:paddingTop="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="17dp">

                <TextView
                    style="@style/text_content_four_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="绑定微信" />

                <TextView
                    android:id="@+id/tv_bind_userinfo"
                    style="@style/text_content_four_lightgray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:textColor="@color/color_green_title"
                    android:text="去绑定" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_mine_item_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_gray" />


            <LinearLayout
                android:id="@+id/ll_logout_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="17dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider_gray" />

                <TextView
                    style="@style/text_content_four_lightblack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:paddingLeft="19dp"
                    android:paddingTop="17dp"
                    android:paddingRight="17dp"
                    android:paddingBottom="17dp"
                    android:text="退出账号" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider_gray" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>