<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_popmenu_sort"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_tophalf_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sort_type_new"
        style="@style/text_content_five_lightgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="11dp"
        android:text="分享到" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weixincircle_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_weixin_cirlce"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/tv_weixin_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_weixin"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="微信好友" />

        <TextView
            android:id="@+id/tv_qqzone_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_qq_zone"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="QQ空间" />

        <TextView
            android:id="@+id/tv_qq_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_qq"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/tv_sina_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_sina"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="新浪微博" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_report_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_report"
            android:gravity="center"
            android:text="举报" />

        <TextView
            android:id="@+id/tv_copyurl_share"
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_copy_url"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="复制链接" />

        <TextView
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible" />

        <TextView
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible" />

        <TextView
            style="@style/text_content_six_lightgray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D8D8D8"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="取消"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
