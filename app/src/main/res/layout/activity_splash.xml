<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical">

    <!--背景图-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_splash"/>

    <FrameLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="324dp"
        android:layout_centerInParent="true">
        <!--logo-->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_splash_logo"/>

        <!--遮挡层-->
        <ImageView
            android:id="@+id/iv_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_splash_mask"/>
    </FrameLayout>

    <!--版本号-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dp_30"
        android:text="@string/app_name"
        android:textColor="@color/color_accent"
        android:textSize="@dimen/sp_14"/>

    <!--以下是花瓣-->
    <ImageView
        android:id="@+id/iv_002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@mipmap/petal_01"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/petal_02"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_004"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/petal_03"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_005"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_90"
        android:background="@mipmap/petal_04"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/petal_05"
        android:visibility="visible"/>

</RelativeLayout>