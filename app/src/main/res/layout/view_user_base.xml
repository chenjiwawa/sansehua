<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8">

    <RelativeLayout
        android:id="@+id/rl_item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="2dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:paddingRight="14dp">

        <LinearLayout
            android:id="@+id/ll_pos_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_pos_user"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#636579"
                android:textSize="@dimen/font_size_two" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="74dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#33AAAAAA" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_img_user"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/ll_pos_user"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/iv_img_user"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_title_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_star_select"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="名"
                android:textColor="#636579"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_id_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_lightgray_2dp_stroke"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="ID:0"
                    android:textColor="#8D8FA9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_age_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_lightgray_2dp_stroke"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="#8D8FA9"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_horoscope_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_lightgray_2dp_stroke"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="座"
                    android:textColor="#8D8FA9"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rank_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_lightgray_2dp_stroke"
                    android:drawableLeft="@mipmap/ic_big_star_select"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="等级：0"
                    android:textColor="#8D8FA9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_followers_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_lightgray_2dp_stroke"
                    android:drawableLeft="@mipmap/ic_big_star_select"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="粉丝：0"
                    android:textColor="#8D8FA9"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_followings_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_lightgray_2dp_stroke"
                    android:drawableLeft="@mipmap/ic_big_star_select"
                    android:ellipsize="end"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="关注：0"
                    android:textColor="#8D8FA9"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>