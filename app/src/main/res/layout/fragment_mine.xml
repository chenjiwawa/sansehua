<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue_green"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_userinfo_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/iv_logo_mine"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginRight="13dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_name_mine"
                    style="@style/text_content_four_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_logo_mine"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/iv_logo_mine"
                    android:text="test" />

                <TextView
                    android:id="@+id/tv_label1_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_logo_mine"
                    android:layout_marginBottom="7dp"
                    android:layout_toRightOf="@+id/iv_logo_mine"
                    android:text="test"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="19dp"
                    android:src="@mipmap/ic_right_arrow" />

            </RelativeLayout>

            <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_userinfo_mine"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_widthPercent="50%">

                    <TextView
                        android:id="@+id/tv_coin_mine"
                        style="@style/text_content_three_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="金币"
                        android:textStyle="bold" />
                </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="#80ffffff" />

                <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_widthPercent="50%">

                    <TextView
                        android:id="@+id/tv_money_mine"
                        style="@style/text_content_three_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="现金"
                        android:textStyle="bold" />
                </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

            </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_gray" />

        <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingTop="12dp"
            android:paddingRight="4dp"
            android:paddingBottom="10dp">

            <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                android:id="@+id/ll_person_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_widthPercent="25%">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_my_font" />

                <TextView
                    style="@style/text_content_six_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的主页"
                    android:textStyle="bold" />
            </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

            <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                android:id="@+id/ll_message_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_widthPercent="25%">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_my_font" />

                <TextView
                    style="@style/text_content_six_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的消息"
                    android:textStyle="bold" />
            </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

            <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                android:id="@+id/ll_favorite_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_widthPercent="25%">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_my_font" />

                <TextView
                    style="@style/text_content_six_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的收藏"
                    android:textStyle="bold" />
            </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

            <com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout
                android:id="@+id/ll_history_mine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_widthPercent="25%">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_my_font" />

                <TextView
                    style="@style/text_content_six_lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="使用记录"
                    android:textStyle="bold" />
            </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>

        </com.qsmaxmin.qsbase.common.widget.percentlayout.PercentLinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_gray" />

        <RelativeLayout
            android:id="@+id/rl_earn_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_my_font" />

            <TextView
                style="@style/text_content_four_lightblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="收徒得奖励"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_mine_item_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="51dp"
                android:layout_height="1dp"
                android:background="@color/color_white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_gray" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_task_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_my_font" />

            <TextView
                style="@style/text_content_four_lightblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="每日任务(10/12)"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_mine_item_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="51dp"
                android:layout_height="1dp"
                android:background="@color/color_white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_gray" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_feedback_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_my_font" />

            <TextView
                style="@style/text_content_four_lightblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="帮助反馈"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_mine_item_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="51dp"
                android:layout_height="1dp"
                android:background="@color/color_white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider_gray" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_about_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_my_font" />

            <TextView
                style="@style/text_content_four_lightblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="关于我们"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_mine_item_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider_gray" />

    </LinearLayout>
</ScrollView>